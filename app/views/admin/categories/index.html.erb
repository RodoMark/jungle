<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
  <table>
        <tr>   
            <%= form_for [:admin, @category] do |c| %>
                <%= c.label "Enter name for a new category:" %>
                <%= c.text_field :name, class: 'form-control' %><br>
              
                <%= c.submit 'Create Category' %>
              
            <% end %>
        </tr>
      </table>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
    <thead>
        <tr>
          <th colspan="5">Category</th>
          
     </thead>
     <tbody>    
        <% @categories.each do |category| %>
          <tr>
            <td>
              <%= category.name %>
            </td>
          </tr>
        <% end %>
      </tbody>
      
  </table>

</section>
